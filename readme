/project-root
├── /public                      # Public folder (web-accessible files)
│   ├── index.php                # Front controller (entry point)
│   ├── /css                     # CSS stylesheets
│   │   └── style.css            # Main CSS file
│   ├── /js                      # JavaScript files
│   │   └── app.js               # Main JS file
│   └── /images                  # Public images (logos, etc.)
│
├── /app                         # Core application files
│   ├── /Controllers             # Controllers for handling business logic
│   │   ├── AuthController.php   # Handles login, logout, and registration
│   │   ├── DashboardController.php # User dashboard controller (accessible by roles)
│   │   └── AdminController.php  # Admin dashboard controller (accessible by admin role)
│   ├── /Models                  # Models for interacting with the database
│   │   └── UserModel.php        # User model for login, registration, and DB queries
│   ├── /Views                   # Views for rendering HTML output
│   │   ├── login.php            # Login view (login form)
│   │   ├── dashboard.php        # User dashboard view
│   │   └── admin_dashboard.php  # Admin dashboard view
│   ├── /Middleware              # Middleware for handling authentication and authorization
│   │   ├── AuthMiddleware.php   # Ensures the user is authenticated
│   │   └── RoleMiddleware.php   # Ensures the user has the required role (admin, user, etc.)
│   ├── /Config                  # Configuration files for settings
│   │   ├── database.php         # Database connection settings
│   │   └── app.php              # Application-wide settings (app name, etc.)
│   ├── /Session.php             # Manages session operations (start, set, get, destroy)
│   ├── /Router.php              # Routes and request handling logic
│   └── /BaseController.php      # Optional base controller class with shared logic
│
├── /database                     # Database-related files
│   ├── /migrations              # Database schema changes (create tables, modify columns)
│   │   └── create_users_table.php # Migration for creating users table
│   ├── /seeds                   # Seeders for populating database with sample data
│   │   └── UserSeeder.php        # Seeder for creating initial users
│   └── /factories                # Factories for generating fake data (for testing)
│
├── /storage                      # Non-public storage (logs, file uploads)
│   ├── /app                      # App-specific files (e.g., logs)
│   └── /logs                     # Application log files
│
├── /tests                        # Unit and integration tests
│   ├── /Feature                  # Feature tests (end-to-end)
│   └── /Unit                     # Unit tests (isolated logic)
│
├── /vendor                       # Composer dependencies
│   └── ...
│
├── .env                          # Environment variables (DB credentials, app settings)
├── .gitignore                    # Git ignore file (to exclude sensitive files)
├── composer.json                 # Composer dependencies file
└── package.json                  # NPM dependencies (for frontend tools)
